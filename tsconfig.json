{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
